playlist-drawer
    background rgba(#eee, .9)
    bottom 4px
    padding-left 4px
    position fixed
    right -246px
    top 46px
    width 240px
    transition right .3s ease
    &.open
        right 8px
    header
        align-items center
        border-bottom 1px solid  #ccc
        display flex
        .heading
            color #666
            flex 1
            font-size 14px
            margin-left 8px 
        button
            color #555
            display block
            font-size 18px
            height 30px
            width 40px
    .playlist
        height: calc(100% - 30px)
        overflow-y scroll
        &::-webkit-scrollbar
            width 2px
        &::-webkit-scrollbar-button,
        &::-webkit-scrollbar-corner
            display none
        &::-webkit-scrollbar-track-piece
            background transparent
        &::-webkit-scrollbar-thumb
            background #aaa
        .list-item
            align-items center
            box-sizing border-box
            display flex
            margin 4px 10px 0
            padding 0 5px
            .name
                display block
                flex 1
                font-size 13px
                margin-right 8px
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
            button
                color #444
                display block
                height 32px
                width 32px
                &:hover
                    background #ccc
        .add-playlist
            height 32px
            margin-top 12px
            position relative
            button,
            form 
                opacity 0
                transition opacity .1s ease, visibility .1s .1s ease
                visibility hidden
                &.show
                    opacity 1
                    transition opacity .1s ease
                    visibility visible
            button
                color #444
                display block
                height 100%
                padding 0 12px
                .icon
                    margin-right 8px
            form
                bottom 0
                display block
                left 0
                position absolute
                right 0
                top 0
                input
                    background rgba(#fff, .6)
                    border 1px solid  #ccc
                    box-sizing border-box
                    display block
                    height 28px
                    margin 2px 10px
                    padding 0 8px
                    width calc(100% - 20px)